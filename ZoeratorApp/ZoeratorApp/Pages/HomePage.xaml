<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZoeratorApp.Pages.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator x:Name="loadIndicator" IsRunning="true"></ActivityIndicator>
            <ListView x:Name="Categorys" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout BackgroundColor="#eee" Padding="10,10,10,10">
                                
                                <Label Text="{Binding name}"
                                        ClassId="{Binding Key}"
                                        TextColor="Black"
                                        BackgroundColor="#eee"
                                        FontSize="Medium"
                                        HorizontalOptions="FillAndExpand"/>
                            </StackLayout>
                            
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>